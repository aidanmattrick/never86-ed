
<%= simple_form_for(@bottle_reading, url: bar_bottle_readings_path(@bar, @bottle)) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :photo, required: true, label: 'Upload a Photo' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  'Upload',:disabled => true %>
  </div>

  <script type="text/javascript">
  
    const $file = document.querySelector('.file');
    const $button = document.querySelector('.form-actions input');

    document.querySelector('.file input').onchange = e => {
      if(e.target.files.length) {
        $button.disabled = false;
      } else {
        $button.disabled = true;
      }
    }
  </script>
<% end %>

<div class="container--camera">
  <%= react_component ('Camera') %>
</div> 
